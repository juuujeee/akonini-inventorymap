
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

    var baseUrl = Url.Content("~/");

    string createAccountUrl = baseUrl + "user/register";
    string forgotPasswordUrl = baseUrl +"user/forgotpassword";
}

<div class="login-page-container">
    <form action="#" autocomplete="off" class="login-form">
        <div class="login-header">
            <h3 class="login-header-h3">Login</h3>
        </div>

        <div class="login-body">
            @if (TempData["verificationMessage"] != null)
            {
                <p class="return-msg jsReturnMsg success-message"><b>Success</b> <br> @TempData["verificationMessage"]</p>
            }
            <div class="login-form-group">
                <input type="text" class="login-form-group-input jsUserName" name="Username" placeholder="Email" required />
            </div>
            <div class="login-form-group">
                <input type="password" class="login-form-group-input jsPassword" name="Password" placeholder="Password" required />
            </div>
            <div class="forgot-password-wrapper">
                <a href="@forgotPasswordUrl" class="forgot-password-a"><small>Forgot password?</small></a>
            </div>
            <div class="login-btn-wrapper">
                <button type="button" class="jsLoginBtn">Login</button>
            </div>

            <div class="login-create-account">
                <p>Don't have an account ?</p>
                <a href="@createAccountUrl" class="create-account-url">Create Account</a>
            </div>

        </div>

    </form>
</div>


@section Scripts {

    <script>
        loginFunc();
    </script>

}